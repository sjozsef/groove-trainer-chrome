{
  "name": "Chrome Extension Skeleton",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A basic skeleton for a Chrome Extension with a popup.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
