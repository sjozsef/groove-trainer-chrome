{
  "name": "Groove Trainer",
  "version": "1.0",
  "manifest_version": 3,
  "description": "This is a YouTube-specific plugin for musicians who want to develop their groove, their inner metronome, time and feel.",
  "action": {
    "default_icon": {
      "16": "images/icon.svg",
      "32": "images/icon.svg",
      "48": "images/icon.svg",
      "128": "images/icon.svg"
    }
  },
  "icons": {
    "16": "images/icon.svg",
    "32": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
